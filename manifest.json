{
  "manifest_version": 3,
  "name": "Wordic XTool",
  "version": "1.0",
  "description": "Scrape vocabulary sets to CSV",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://quizlet.com/*", "*://*.quizlet.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}